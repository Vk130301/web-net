<form autocomplete="off">
    <div class="row m-b-30">
        <div class="row">
            <div class="col-md-3">
                <div class="input-affix m-v-10">
                    Từ ngày: <input type="text" id="datepicker" class="form-control ">
                </div>
            </div>
