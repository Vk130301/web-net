@model Book_Store.Models.Role

@{
    ViewData["Title"] = "Tạo quyền truy cập";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
            <a asp-area="Admin" asp-controller="AdminRoles" asp-action="Index" class="breadcrumb-item">Danh sách quyền truy cập </a>
            <span class="breadcrumb-item active">Tạo quyền truy cập</span>
        </nav>
    </div>
</div>

<form asp-controller="AdminRoles" asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="page-header no-gutters has-tab">
        <div class="d-md-flex m-b-15 align-items-center justify-content-between">
            <div class="m-b-15">
                <button class="btn btn-primary">
                    <i class="anticon anticon-plus-circle"></i>
                    <span>Tạo mới quyền truy cập</span>
                </button>
            </div>
        </div>
    </div>
    <div class="tab-content m-t-15">
        <div class="tab-pane fade show active" id="product-edit-basic">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <label class="font-weight-semibold" for="productName">Role Name</label>
                        <input type="text" class="form-control" asp-for="RoleName">
                        <span asp-validation-for="RoleName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" for="ShortDesc">Description</label>
                        <input type="text" class="form-control" asp-for="Description">
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>